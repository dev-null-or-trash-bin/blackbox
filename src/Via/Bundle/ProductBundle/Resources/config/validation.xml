<?xml version="1.0" encoding="UTF-8"?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Via\Bundle\ProductBundle\Entity\Product">
        <getter property="masterVariant">
            <constraint name="Valid" />
        </getter>
        <getter property="variants">
            <constraint name="Valid" />
        </getter>
        
        <property name="name">
            <constraint name="NotBlank" />
        </property>
    </class>   
    
    <class name="Via\Bundle\ProductBundle\Entity\Property">
        <property name="name">
            <constraint name="NotBlank" />
        </property>
        
        <property name="presentation">
            <constraint name="NotBlank" />
        </property>
              
    </class> 
    
    <class name="Via\Bundle\ProductBundle\Entity\ProductProperty">
        
        <property name="value">
            <constraint name="NotBlank" />
        </property>
              
    </class>

</constraint-mapping>
